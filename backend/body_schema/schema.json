{
    "auth":{
        "signup":{
            "email": { "type": "string", "required": true, "minLength": 5 }
        },
        "verify":{
            "otp": { "type": "number", "required": true },
            "token": { "type": "string", "required": true }
        },
        "signin":{
            "email": { "type": "string", "required": true },
            "password": { "type": "string", "required": true }
        },
        "forgot-password":{
            "email": { "type": "string", "required": true }
        },
        "reset-password":{
            "token": { "type": "string", "required": true },
            "otp" : { "type": "number", "required": true },
            "password": { "type": "string", "required": true }
        }
    },
    "user":{
        "update":{
            "name": { "type": "string", "required": false ,"maxLength":100},
            "delete_pic": { "type": "string", "required": false },
            "daily_calorie_limit": { "type": "number", "required": false }
        },
        "add_food":{
            "food_name": { "type": "string", "required": true, "maxLength":100 },
            "ingredients": { "type": "array", "required": true },
            "calories": { "type": "number", "required": true, "min": 0 ,"max":5000 },
            "protein": { "type": "number", "required": true, "min": 0 ,"max":500 },
            "carbs": { "type": "number", "required": true, "min": 0 ,"max":500 },
            "fats": { "type": "number", "required": true, "min": 0 ,"max":500 },
            "warnings": {"type":"array", "required": true}
        },
        "delete_food":{
            "food_log_id": { "type": "string", "required": true }
        }
    }
}